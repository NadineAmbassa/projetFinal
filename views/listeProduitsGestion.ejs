<style>
  .action-column {
    width: 25px;
  }
</style>
<div class="container">
  <div>
    <h1
      class="text-center mb-4"
      style="
        margin-top: 20px;
        color: #2e22d6;
        font-size: 2.5em;
        letter-spacing: 1.2px;
        word-spacing: 2px;
        font-weight: bold;
        text-shadow: 2px 2px 4px #ec0505;
      "
    >
      Liste des produits
    </h1>

    <h1>
      <a
        href="/produits/ajouter"
        class="btn btn-primary"
        style="font-size: 24px; padding: 20px 30px"
        >Ajouter un produit</a
      >
    </h1>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Image</th>
        <th>Nom</th>
        <th>Prix</th>
        <th>Quantit√©</th>
        <th>Editer/Supprimer</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(function(produit) { %>
      <tr>
        <td>
          <img
            src="<%= produit.image %>"
            height="200"
            width="200"
            style="object-fit: contain; border-bottom: 1px solid gray"
            class="card-img-top"
            alt="..."
          />
        </td>

        <td><%= produit.nom %></td>
        <td><%= produit.prix %></td>
        <td><%= produit.quantiter %></td>
        <td class="action-column">
          <div class="mt-4">
            <a
              href="/produits/editer/<%= produit._id %>"
              class="btn btn-primary"
            >
              <i class="fa fa-pencil-alt fa-fw"></i> Editer
            </a>
            <a
              href="/produits/supprimer/<%= produit._id %>"
              onclick="return confirm('Etes-vous certain de vouloir supprimer ce produit?');"
              class="btn btn-danger mr-2"
            >
              <i class="fa fa-trash"></i> Supprimer
            </a>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
