<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.4.0/css/all.css" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="icon" href="/images/Logo/nozama-logo.png">
    <title>Modifier un usager</title>
</head>

<body>
    <% let admin = usager.role.includes('admin'); %>
    <% let gestion = usager.role.includes('gestion'); %>
    <nav class="navbar navbar-light" style="background-color: #60767f;">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/images/Logo/nozama-low-resolution-logo-color-on-transparent-background.png" alt=""
                    width="140" height="40">
            </a>
        </div>
    </nav>
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Modifier un usager</p>
                                    <%- include('./partiels/erreur_msg') %>
                                    <form class="mx-1 mx-md-4" action="/usagers/modifier" method="POST">
                                        <input type="hidden" name="courrielDepart" value="<%= usager.courriel %>">
                                        <input type="hidden" name="id" id="id" value="<%= usager._id %>">
                                        <!-- Nom -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="nom" name="nom" class="form-control" placeholder="Nom"
                                                value="<%= usager.nom %>"
                                                >
                                            </div>
                                        </div>

                                        <!-- Email -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="email" id="courriel" name="courriel" class="form-control" placeholder="Courriel"
                                                value="<%= usager.courriel %>"
                                                >
                                            </div>
                                        </div>

                                        <!-- Roles -->
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-gear fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                Client <input type="checkbox" name="normal" id="normal" checked disabled>
                                                <label for="admin">Admin</label> <input type="checkbox" name="admin" id="admin"
                                                <% if (admin) { %>
                                                    checked
                                                <% } %>
                                                >
                                                <label for="gestion">Gestion</label> <input type="checkbox" name="gestion" id="gestion"
                                                <% if (gestion) { %>
                                                    checked
                                                <% } %>
                                                >
                                            </div>
                                        </div>                                  
                                        
                                        <div class="d-flex mx-4 mb-3 mb-lg-4">
                                            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Enregistrez">
                                            <input type="reset" class="btn btn-secondary btn-lg btn-block" value="Reset">
                                        </div>

                                        <div class="form-check d-flex mb-5">
                                            <label class="form-check-label" for="form2Example3">
                                               <a href="/usagers/liste">Retourner Ã  la liste des usagers</a>
                                            </label>
                                        </div>                                  
                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="/images/Logo/nozama-logo.png"
                                        class="img-fluid" alt="Sample image"
                                        style="border-radius: 10px;">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>